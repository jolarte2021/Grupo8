
@model HotelCliente.Entidades.Reserva


@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>

<div class="well well-lg">
    @if (Session["Message"] != null)
    {
        <div class="alert alert-success alert-dismissable">
            <button class="close" aria-hidden="true" type="button" data-dismiss="alert">×</button>
            @Session["Message"].ToString()
        </div>
        Session.Remove("Message");
    }


    <div class="container">
        @using (Html.BeginForm("Crear", "Reserva", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div id="home" class="tab-pane fade in active">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row col-md-12">
                            <div class="row col-md-12" style="text-align:center; margin-bottom:30px">
                                <p><h3 class="h2">Creación Reserva</h3></p>
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Cedula_Cliente, new { @class = "h5 col-md-4 control-label" })

                                @Html.TextBoxFor(model => model.Cedula_Cliente, new { @class = "col-md-8 control-label-data" })
                                @Html.ValidationMessageFor(model => model.Cedula_Cliente, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Cantidad_personas, new { @class = "h5 col-md-4 control-label" })

                                @Html.TextBoxFor(model => model.Cantidad_personas, new { @class = "col-md-8 control-label-data" })
                                @Html.ValidationMessageFor(model => model.Cantidad_personas, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Fecha, new { @class = "h5 col-md-4 control-label" })

                                @Html.TextBoxFor(model => model.Fecha, "{0:MM/dd/yy}", new { @class = "col-md-8 date-picker" })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Cod_Pago, new { @class = "h5 col-md-4 control-label" })

                                @Html.DropDownList("value", (IEnumerable<SelectListItem>)ViewBag.FormaPago, "Seleccione", new { @class = "col-md-8 control-label-data", @title = "Seleccione Forma de Pago" })
                                @Html.ValidationMessageFor(model => model.Cod_Sede)
                            </div>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Cod_Sede, new { @class = "h5 col-md-4 control-label" })

                                @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.TipoSede, "Seleccione", new { @class = "col-md-8 control-label-data", @title = "Seleccione Sede" })
                                @Html.ValidationMessageFor(model => model.Cod_Sede)
                            </div>
                        </div>

                    </div>

                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-primary" id="btnSave">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>&nbsp;Guardar
                    </button>
                    <a class="btn btn-default" role="button" href="@Url.Action("Index", "Categoria")">
                        <span class='glyphicon glyphicon-arrow-left' aria-hidden='true'></span> &nbsp;Cancelar
                    </a>
                </div>
            </div>

        }
    </div>
</div>